<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:id="@+id/svShopItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="23sp"
            android:layout_marginTop="60sp"
            android:layout_marginEnd="23sp"
            android:layout_marginBottom="23sp"
            android:contentDescription="@android:string/autofill"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/categoryItemsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="category"
            android:fontFamily="@font/lalezar"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_wins_tile"
            android:textAlignment="center"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>